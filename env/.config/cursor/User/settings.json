{
  // ============================================
  // NEOVIM INTEGRATION
  // ============================================
  "vscode-neovim.neovimExecutablePaths.linux": "nvim",
  "vscode-neovim.useWSL": false,
  "vscode-neovim.mouseSelectionStartVisualMode": false,
  "vscode-neovim.statusBarIndicatorsAlignment": "left",
  "vscode-neovim.statusBarColorControl": true,
  "vscode-neovim.normalModeKeyBindings": [
    {
      "before": ["<C-d>"],
      "after": ["2", "1", "j", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["2", "1", "k", "z", "z"]
    }
  ],
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // ============================================
  // ROSE PINE THEME
  // ============================================
  "workbench.colorTheme": "Rosé Pine Moon",

  "workbench.colorCustomizations": {
    "[Rosé Pine Moon]": {
      "editor.background": "#191724",
      "editorGutter.background": "#191724",
      "editor.selectionBackground": "#44415a",
      "editorLineNumber.foreground": "#6e6a86",
      "editorLineNumber.activeForeground": "#c0c0c0",
      "editor.lineHighlightBackground": "#00000000",
      "editor.lineHighlightBorder": "#00000000",

      // Indent guides
      "editorIndentGuide.background": "#26233a",
      "editorIndentGuide.activeBackground": "#524f67",

      // Scrollbar - invisible
      "scrollbarSlider.background": "#191724",
      "scrollbarSlider.hoverBackground": "#191724",
      "scrollbarSlider.activeBackground": "#191724",

      // Status bar
      "statusBar.background": "#191724",
      "statusBar.foreground": "#e0def4",

      // Quick pick popup
      "quickInput.background": "#191724",
      "quickInput.foreground": "#e0def4",
      "quickInputList.focusBackground": "#44415a",
      "quickInputList.focusForeground": "#e0def4",


    // ALL UI ELEMENTS - SAME AS EDITOR
    "sideBar.background": "#0c0b12",
    "sideBar.foreground": "#e0def4",
    "sideBarSectionHeader.background": "#0c0b12",
    
    "activityBar.background": "#0c0b12",
    "activityBar.foreground": "#e0def4",
    
    "statusBar.background": "#0c0b12",
    "statusBar.foreground": "#e0def4",
    "statusBar.noFolderBackground": "#0c0b12",
    
    "titleBar.activeBackground": "#0c0b12",
    "titleBar.activeForeground": "#e0def4",
    "titleBar.inactiveBackground": "#0c0b12",
    
    "panel.background": "#0c0b12",
    "panel.border": "#26233a",
    "panelTitle.activeForeground": "#e0def4",
    
    "terminal.background": "#0c0b12",
    
    "tab.inactiveBackground": "#0c0b12",
    "tab.activeBackground": "#0c0b12",
    "editorGroupHeader.tabsBackground": "#0c0b12"
    }
  },

  "editor.tokenColorCustomizations": {
    "[Rosé Pine Moon]": {
      "textMateRules": [
        {
          "scope": "support.function.builtin",
          "settings": {
            "foreground": "#eb6f92"
          }
        },
        {
          "scope": "support.type.builtin",
          "settings": {
            "foreground": "#9ccfd8",
            "fontStyle": "bold"
          }
        },
        {
          "scope": [
            "entity.name.function",
            "support.function",
            "meta.function-call",
            "entity.name.function.sql"
          ],
          "settings": {
            "foreground": "#c4a7e7"
          }
        },
        {
          "scope": [
            "entity.name.type",
            "support.type",
            "storage.type"
          ],
          "settings": {
            "foreground": "#9ccfd8"
          }
        },
        {
          "scope": "variable.other.member",
          "settings": {
            "foreground": "#9ccfd8"
          }
        },
        {
          "scope": [
            "support.function.aggregate.sql",
            "support.function.scalar.sql",
            "support.function.string.sql",
            "support.function.window.sql",
            "support.function.sql",
            "meta.function.sql"
          ],
          "settings": {
            "foreground": "#c4a7e7"
          }
        },
        {
          "scope": [
            "keyword.other.sql",
            "keyword.other.DML.sql",
            "keyword.other.DDL.sql"
          ],
          "settings": {
            "foreground": "#eb6f92"
          }
        }
      ]
    }
  },

  // ============================================
  // ZOOM & APPEARANCE
  // ============================================
  "window.zoomLevel": 1.3,
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",

  // ============================================
  // PERISCOPE (TELESCOPE-LIKE SEARCH)
  // ============================================
  "periscope.rgOptions": ["--smart-case"],
  "periscope.showLineNumbers": true,
  "periscope.peekBorderColor": "#eb6f92",
  "periscope.peekBorderWidth": "2px",
  "periscope.peekBorderStyle": "solid",
  "periscope.peekMatchColor": "#44415a",
  "periscope.rgQueryParams": [
    {
      "regex": "^(.+) -t ?(\\w+)$",
      "param": "-t $2"
    },
    {
      "regex": "^(.+) \\*\\.(\\w+)$",
      "param": "-g '*.$2'"
    }
  ],

  // ============================================
  // PROJECT MANAGER
  // ============================================
  "projectManager.git.baseFolders": [
    "~/workspace/projects",
    "~/workspace/talqui-chat",
    "~/personal",
    "~/personal/dev/env/.config",
    "~/personal/uni",
    "/mnt/c/Users/breno/personal"
  ],
  "projectManager.sortList": "Recent",
  "projectManager.git.maxDepthRecursion": 1,

  // ============================================
  // GIT
  // ============================================
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  // ============================================
  // CHAT
  // ============================================
  "aichat.openChatPanelOnStartup": false,

  // ============================================
  // EDITOR
  // ============================================
  "editor.lineNumbers": "relative",
  "editor.cursorLineNumber": "on",
  "editor.renderLineHighlight": "gutter",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.cursorSurroundingLines": 8,
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "off",
  "editor.fontFamily": "'FiraCode Nerd Font', monospace",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "blink",
  "editor.cursorWidth": 2,
  "editor.selectionHighlight": false,
  "editor.occurrencesHighlight": "off",

  // Folding and glyph margin
  "editor.minimap.enabled": false,
  "editor.glyphMargin": true,
  "editor.folding": true,
  "editor.foldingStrategy": "indentation",
  "editor.showFoldingControls": "always",

  // Indent guides ENABLED
"editor.guides.indentation": true,

  "editor.rulers": [],
  "editor.renderWhitespace": "none",
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,
  "editor.matchBrackets": "never",

  // ============================================
  // WORKBENCH
  // ============================================
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.editor.showTabs": "single",
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.enablePreview": true,
  "breadcrumbs.enabled": false,

  // ============================================
  // TERMINAL
  // ============================================
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": true,

  // ============================================
  // FILES
  // ============================================
  "files.autoSave": "off",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.hotExit": "off",

  // ============================================
  // SEARCH
  // ============================================
  "search.smartCase": true,

  // ============================================
  // LSP
  // ============================================
  "editor.inlineSuggest.enabled": true,
  "errorLens.enabled": true,
  "editor.formatOnSave": true,

  // ============================================
  // LANGUAGES
  // ============================================
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "python.defaultInterpreterPath": "./venv/bin/python",
  "[sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
  "sqlfluff.dialect": "clickhouse",
  "sqlfluff.linter.run": "onSave"
}
