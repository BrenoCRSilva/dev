{
  // ============================================
  // NEOVIM INTEGRATION
  // ============================================
  "vscode-neovim.neovimExecutablePaths.linux": "nvim",
  "vscode-neovim.useWSL": false,
  "vscode-neovim.mouseSelectionStartVisualMode": false,
  "vscode-neovim.statusBarIndicatorsAlignment": "left",
  "vscode-neovim.statusBarColorControl": true,
  "vscode-neovim.normalModeKeyBindings": [
    {
      "before": ["<C-d>"],
      "after": ["2", "1", "j", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["2", "1", "k", "z", "z"]
    }
  ],
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // ============================================
  // ROSE PINE THEME
  // ============================================
  "workbench.colorTheme": "Rosé Pine Moon",

  "workbench.colorCustomizations": {
    "[Rosé Pine Moon]": {
      "editor.background": "#191724",
      "editorGutter.background": "#191724",
      "editor.selectionBackground": "#44415a",
      "editorLineNumber.foreground": "#6e6a86",
      "editorLineNumber.activeForeground": "#c0c0c0",
      "editor.lineHighlightBackground": "#00000000",
      "editor.lineHighlightBorder": "#00000000",
      "editorIndentGuide.background": "#26233a",
      "editorIndentGuide.activeBackground": "#524f67",
      "scrollbarSlider.background": "#191724",
      "scrollbarSlider.hoverBackground": "#191724",
      "scrollbarSlider.activeBackground": "#191724",
      "statusBar.background": "#191724",
      "statusBar.foreground": "#e0def4",
      "quickInput.background": "#191724",
      "quickInput.foreground": "#e0def4",
      "quickInputList.focusBackground": "#44415a",
      "quickInputList.focusForeground": "#e0def4",
      "sideBar.background": "#191724",
      "sideBar.foreground": "#e0def4",
      "activityBar.background": "#191724",
      "activityBar.foreground": "#e0def4",
      "statusBar.background": "#191724",
      "statusBar.foreground": "#e0def4",
      "statusBar.noFolderBackground": "#191724",
      "titleBar.activeBackground": "#191724",
      "titleBar.activeForeground": "#e0def4",
      "panel.background": "#191724",
      "panel.border": "#26233a",
      "terminal.background": "#191724",
      "tab.inactiveBackground": "#191724",
      "tab.activeBackground": "#191724"
    }
  },

  "editor.tokenColorCustomizations": {
    "[Rosé Pine Moon]": {
      "textMateRules": [
        {
          "scope": "support.function.builtin",
          "settings": {
            "foreground": "#eb6f92"
          }
        },
        {
          "scope": "support.type.builtin",
          "settings": {
            "foreground": "#9ccfd8",
            "fontStyle": "bold"
          }
        },
        {
          "scope": ["entity.name.function", "support.function"],
          "settings": {
            "foreground": "#c4a7e7"
          }
        },
        {
          "scope": ["entity.name.type", "support.type", "storage.type"],
          "settings": {
            "foreground": "#9ccfd8"
          }
        }
      ]
    }
  },

  "window.zoomLevel": 1,
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",

  "periscope.rgOptions": ["--smart-case"],
  "periscope.showLineNumbers": true,
  "periscope.peekBorderColor": "#eb6f92",
  "periscope.peekBorderWidth": "2px",
  "periscope.peekBorderStyle": "solid",
  "periscope.peekMatchColor": "#44415a",
  "periscope.rgQueryParams": [
    {
      "regex": "^(.+) -t ?(\\w+)$",
      "param": "-t $2"
    },
    {
      "regex": "^(.+) \\*\\.(\\w+)$",
      "param": "-g '*.$2'"
    }
  ],

  "projectManager.git.baseFolders": [
    "~/workspace/projects",
    "~/workspace/talqui-chat",
    "~/personal/dev/.config",
    "~/personal/projects",
    "~/personal/dev",
    "~/personal"
  ],
  "projectManager.sortList": "Recent",

  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  "aichat.openChatPanelOnStartup": false,

  "editor.lineNumbers": "relative",
  "editor.cursorLineNumber": "on",
  "editor.renderLineHighlight": "gutter",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.cursorSurroundingLines": 8,
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "off",
  "editor.fontFamily": "'FiraCode Nerd Font', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "blink",
  "editor.cursorWidth": 2,
  "editor.selectionHighlight": false,
  "editor.occurrencesHighlight": "off",
  "editor.minimap.enabled": false,
  "editor.glyphMargin": false,
  "editor.folding": true,
  "editor.foldingStrategy": "indentation",
  "editor.showFoldingControls": "always",
  "editor.guides.indentation": false,
  "editor.rulers": [],
  "editor.renderWhitespace": "none",
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,
  "editor.matchBrackets": "never",

  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.editor.showTabs": "single",
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.enablePreview": true,
  "breadcrumbs.enabled": false,

  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": true,

  "files.autoSave": "off",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.hotExit": "off",

  "search.smartCase": true,

  "editor.inlineSuggest.enabled": true,
  "errorLens.enabled": true,
  "editor.formatOnSave": true,

  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "python.defaultInterpreterPath": "./venv/bin/python",
  "[sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
  "sqlfluff.dialect": "clickhouse",
  "sqlfluff.linter.run": "onSave",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.suggest.showStatusBar": false,
  "editor.suggest.insertMode": "replace",
  "notifications.timeout": 3000,
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false
}